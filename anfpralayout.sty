\newcommand{\@semester}{SOMMERSEMESTER \year}
\newcommand{\semester}[1]{\renewcommand{\@semester}{#1}}
\newcommand{\@fakulty}{Fakult"at für Physik}
\newcommand{\fakulty}[1]{\renewcommand{\@fakulty}{#1}}
\title{Physikalisches Praktikum\\f"ur Bachelor}
\newcommand{\@experiment}{}
\newcommand{\experiment}[1]{\renewcommand{\@experiment}{#1}}
\date{\today}
\newcommand{\@group}{}
\newcommand{\group}[1]{\renewcommand{\@group}{#1}}
\newcommand{\@supervisor}{}
\newcommand{\supervisor}[1]{\renewcommand{\@supervisor}{#1}}

\newcommand{\makeanfpratitle}{
	\begin{titlepage}
	\thispagestyle{empty}
	
	\begin{center}
		\Large{\@fakulty}\\
	\end{center}
	
	\vskip 1cm

	%Eintrag des Wintersemesters
	\begin{center}
		\textbf{\LARGE \@semester}
	\end{center}

	\vskip 1cm
	
	\begin{center}
		\textbf{\LARGE{\@title}}
	\end{center}

	\vskip 2cm

	\begin{center}
		\textbf{\LARGE{PROTOKOLL}}
	\end{center}
	
	\vskip 2cm			

	\begin{flushleft}
		\textbf{\Large{Experiment (Nr., Titel):}}\\
		%Experiment Nr. und Titel statt den Punkten eintragen
		\LARGE{\@experiment}	
	\end{flushleft}

	\vskip 0.5cm

	%Eintragen des Abgabedatums, oder des Erstelldatums des Protokolls	
	\begin{flushleft}
		\textbf{\Large{Datum:}} \Large{\@date}
	\end{flushleft}
			
	\vskip 0.5cm

	%Namen der Protokollschreiber
	\begin{flushleft}
		\textbf{\Large{Namen:}} \Large{\@author}
	\end{flushleft}

	\vskip 1cm
	
	%Kurstag und Gruppennummer, zb. Fr/5
	\begin{flushleft}
		\textbf{\Large{Kurstag/Gruppe:}} \Large{\@group}
	\end{flushleft}

	\vfill
	
	%Name des Betreuers, das Praktikum betreute.
	\begin{flushleft}
		\LARGE{\textbf{Betreuer:}}\\	\Large{\@supervisor}	
	\end{flushleft}
	\end{titlepage}
}


